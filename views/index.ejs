<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mckenzie Blog</title>
    <link rel="stylesheet" href="main.css" />
    <!-- animations for modals -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />
  </head>
  <body>
    <!-- theme control -->
    <div class="dropdown float-end m-3">
      <button id="theme_toggle" type="button" class="btn btn-outline-primary">
        <img
          id="theme_toggle_img"
          src="light-mode-day-sun.svg"
          ;
          height="25px"
          width="25px"
        />
      </button>
    </div>
    <!-- primary container div -->
    <div class="container-fluid d-flex flex-column align-items-center">
      <!-- header -->
      <div class="m-5">
        <h1 class="text-center">Hello</h1>
        <h2 class="text-center">Welcome to my blog!</h2>
      </div>
      <!-- button trigger post_modal -->
      <div class="m-4">
        <button
          type="button"
          class="btn btn-primary"
          data-bs-toggle="modal"
          data-bs-target="#new_post_modal"
        >
          Make A Post
        </button>
      </div>
      <!-- post modal -->
      <%- include('partials/post_modal.ejs') %>

      <!-- posts (accordion) -->
      <%- include('partials/posts.ejs') %>
    </div>

    <script src="jquery.min.js"></script>
    <script src="bootstrap.bundle.min.js"></script>
    <script type="module" src="main.js"></script>
  </body>
</html>
