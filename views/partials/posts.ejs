<% if (locals.data) { %> <% console.log(locals.data); %>
<div class="accordion col-12 col-sm-10 col-lg-8 col-xxl-6 m-5" id="accordion">
  <% data.forEach( (elmt) => { %>

  <div class="accordion-item">
    <h2 class="accordion-header">
      <button
        class="accordion-button"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#collapse<%=elmt.idx%>"
        aria-expanded="true"
        aria-controls="collapse<%=elmt.idx%>"
      >
        <div class="custom_text">
          <strong><em><%=elmt.title%></em></strong>
        </div>
        <div class="d-flex justify-content-end flex-grow-1">
          <h7 class="mx-3 float-end"><%=elmt.date%></h7>
        </div>
      </button>
    </h2>

    <div
      id="collapse<%=elmt.idx%>"
      class="accordion-collapse collapse"
      data-bs-parent="#accordion"
    >
      <div class="accordion-body custom_text"><%=elmt.content%></div>
    </div>
  </div>

  <% }) %>
</div>

<% } %>
<button type="button" class="btn-close" aria-label="Close"></button>
